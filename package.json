{
  "name": "tolgee-cli",
  "version": "0.1.0",
  "type": "commonjs",
  "description": "A tool to interact with the Tolgee Platform through CLI",
  "bin": {
    "tolgee": "./dist/index.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "pretest": "npm run tolgee:start",
    "posttest": "npm run tolgee:stop",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest -c jest.unit.config.ts",
    "pretest:e2e": "npm run tolgee:start",
    "posttest:e2e": "npm run tolgee:stop",
    "test:e2e": "jest -c jest.e2e.config.ts",
    "test:e2e-run": "jest -c jest.e2e.config.ts",
    "tolgee:start": "node scripts/startDocker.mjs",
    "tolgee:stop": "docker stop tolgee_cli_e2e",
    "lint": "prettier --check ./src ./test ./scripts jest.config.ts jest.*.config.ts",
    "prettier": "prettier --write ./src ./test ./scripts jest.config.ts jest.*.config.ts",
    "run-dev": "ts-node ./src/index.ts",
    "schema": "openapi-typescript https://app.tolgee.io/v3/api-docs/All%20Internal%20-%20for%20Tolgee%20Web%20application --output src/client/internal/schema.generated.ts"
  },
  "author": "Jan Cizmar",
  "license": "MIT",
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "base32-decode": "^1.0.0",
    "commander": "^9.4.0",
    "cosmiconfig": "^7.0.1",
    "form-data": "^4.0.0",
    "glob": "^8.0.3",
    "json5": "^2.2.1",
    "undici": "^5.10.0",
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^8.0.0",
    "xstate": "^4.34.0",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.7.18",
    "@types/yauzl": "^2.10.0",
    "jest": "^29.2.1",
    "openapi-typescript": "^5.4.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
